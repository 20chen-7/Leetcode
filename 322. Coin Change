class Solution:
    def coinChange(self, coins: List[int], amount: int) -> int:
        meno = dict()
        def dp(n):
            if n in meno:
                return meno[n]
            if n == 0:
                return 0
            if n < 0:
                return -1
            res = float('inf')
            for coin in coins:
                sub = dp(n-coin)
                if sub == -1:
                    continue
                res = min(res, sub+1)
            meno[n] = res if res != float('inf') else -1
            return meno[n]
        return dp(amount)
